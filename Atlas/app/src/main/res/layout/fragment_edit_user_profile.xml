<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.EditUserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:text="@string/name"
            android:textColor="@color/purple_700"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_edit_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:hint="Shradha Kedia"
            android:inputType="textCapWords"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:text="Gender"
            android:textColor="@color/purple_700"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_edit_gender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:hint="Male"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:text="Contact"
            android:textColor="@color/purple_700"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_edit_alternate_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:hint="8652652894"
            android:inputType="number"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:text="Address"
            android:textColor="@color/purple_700"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_edit_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:hint="Gorakhpur"
            android:inputType="textCapWords"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bv_change_password"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Change Password"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_edit_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="Old Password"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/purple_500"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="New Password"
        android:textSize="16sp"
        android:textColor="@color/purple_500"
        android:visibility="gone" />

    <Button
        android:id="@+id/bv_confirm_password"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Confirm Password"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/bv_change_profile"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Change Profile"
        android:textSize="16sp" />


</LinearLayout>